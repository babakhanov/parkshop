-cat = @category.name.split(" ").each{|i| i.downcase!}.join("_")
.col-xs-12
  .form-group
    %ul.breadcrumb
      %li=link_to "Main", :root 
      %li=link_to @category.name, @category
      %li.active=@product.name
  .row
    .col-xs-5
      .row
        = image_tag @product.product_pics.first.image.large, :class => "col-xs-12"
    .col-xs-6
      %h1=@product.name
      .form-group
        .form-group=@product.small_text
      .form-group
        %b Description
        .form-group=@product.description
      .form-group
        = render :partial => "sub_product", :collection => @sub_products
